<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <springProfile name="!profile">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%-5level [%d{ISO8601, UTC}] %logger [%thread]: %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <logger name="exercise.gameproviderservice" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
